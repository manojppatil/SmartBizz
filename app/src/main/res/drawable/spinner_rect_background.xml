<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF" />
            <corners android:radius="5dp" />
            <stroke android:width="@dimen/_1sdp"
                android:color="@color/black_new"/>
        </shape>

    </item>
    <item android:right="@dimen/_2sdp">
        <bitmap android:gravity="right|center_vertical"
            android:src="@drawable/crossbox">
        </bitmap>
    </item>
</layer-list>