<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/bg_image"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eduvanz.fqform.borrowerdetail.FqFormBorrower"
    android:orientation="vertical">

    <include layout="@layout/apptoolbar"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearlayout_personal_coborrower"
            android:background="@color/lightblue"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textview_personal_coborrower"
            android:padding="10dp"
            android:background="@drawable/rectanglebackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Personal"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout_financial"
            android:background="@color/lightblue"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textview_financial"
            android:background="@drawable/rectanglebackground"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Financial"/>
            </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/framelayout_fqform_coborrower"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>
