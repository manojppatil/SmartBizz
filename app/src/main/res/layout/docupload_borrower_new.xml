                            android:layout_below="@+id/textview_incomeproof"
                            android:layout_margin="5dp"
                            android:background="@color/colorSecondary"
                            android:text="Upload"
                            android:textColor="@color/white"
                            android:visibility="gone"
                            android:textSize="11sp"/>
