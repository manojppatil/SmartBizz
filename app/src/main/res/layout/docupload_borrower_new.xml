                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="Address Proof"
                            android:textColor="@color/grey"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageview_kyc_addressproof"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_below="@+id/textview_addressProof"
                            android:layout_margin="5dp"
                            android:background="@drawable/background_docupload"
                            android:scaleType="centerCrop" />

                        <Button
                            android:id="@+id/button_kyc_addressproof"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/textview_addressProof"
                            android:layout_margin="5dp"
                            android:background="@color/colorSecondary"
                            android:text="Upload"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView_uploadtick2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:src="@drawable/greenrightclick"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
