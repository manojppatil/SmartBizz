                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Upload Your Profile Photo"
                        android:textColor="@color/grey"
                        android:textSize="11sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textview_profilephoto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="Profile Photo"
                            android:textColor="@color/grey"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageView_kyc_profilephoto"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_below="@+id/textview_profilephoto"
                            android:layout_margin="5dp"
                            android:background="@drawable/background_docupload"
                            android:scaleType="centerCrop" />

                        <Button
                            android:id="@+id/button_kyc_profilephoto"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/textview_profilephoto"
                            android:layout_margin="5dp"
                            android:background="@color/colorSecondary"
                            android:text="Upload"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/imageView_uploadtick9"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/greenrightclick"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textview_kyc_photoId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Upload One of Your Photo IDs"
                        android:textColor="@color/grey"
                        android:textSize="11sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textview_photoIDProof"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="PhotoID"
                            android:textColor="@color/grey"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageView_kyc_photoId"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_below="@+id/textview_photoIDProof"
