<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/border"
        android:elevation="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_8sdp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/ivUser"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    app:srcCompat="@drawable/ic_user_circle" />

                <TextView
                    android:id="@+id/txtPersonalDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/employement_details"
                    android:textColor="@color/textcolordark"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivUser"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linStudentBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_4sdp"
                            android:background="@drawable/border_circular"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/_4sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:tint="@color/darkblue"
                                app:srcCompat="@drawable/ic_graduation_cap" />

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:background="@color/blue1" />

                            <TextView
                                android:id="@+id/txtStudent"
                                style="@style/TextViewTitle14Style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="Student"
                                android:textColor="@color/textcolordark" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linSalariedBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:background="@drawable/border_circular"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/_4sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:tint="@color/darkblue"
                                app:srcCompat="@drawable/ic_briefcase" />

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:background="@color/blue1" />

                            <TextView
                                android:id="@+id/txtSalaried"
                                style="@style/TextViewTitle14Style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="Salaried"
                                android:textColor="@color/textcolordark" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linSelfEmployedBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:background="@drawable/border_circular"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/_4sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:tint="@color/darkblue"
                                app:srcCompat="@drawable/ic_male" />

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:background="@color/blue1" />

                            <TextView
                                android:id="@+id/txtSelfEmployed"
                                style="@style/TextViewTitle14Style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="Self Employed"
                                android:textColor="@color/textcolordark" />
                        </LinearLayout>

                    </LinearLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:theme="@style/EditTextStyle"
                        app:hintTextAppearance="@style/CustomTextAppearance">

                        <EditText
                            android:id="@+id/companyedt"
                            android:inputType="text"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="COMPANY NAME"
                            android:imeOptions="actionNext"
                            style="@style/EditTextStyle" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilAnnualIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:theme="@style/EditTextStyle"
                        app:hintTextAppearance="@style/CustomTextAppearance">

                        <EditText
                            android:id="@+id/edtaanual"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=" ANNUAL INCOME"
                            android:inputType="numberDecimal"
                            android:imeOptions="actionDone"
                            android:drawableStart="@drawable/ic_rupee_sign"
                            style="@style/EditTextStyle" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>
