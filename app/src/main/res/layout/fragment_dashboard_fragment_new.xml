                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/_5sdp">

                <RelativeLayout
                    android:layout_width="@dimen/_99sdp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_white_filled"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            style="@style/TextViewTitleStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Friendly" />

                        <TextView
                            style="@style/TextViewTitleStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Score"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:background="@color/black" />

                        <TextView
                            style="@style/TextViewSmall10Style"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="@string/fs_msg" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_below="@id/layout4"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-18dp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/border_circular_red_filled"
                        app:srcCompat="@drawable/ic_angle_right" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/_99sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp">

                    <LinearLayout
                        android:id="@+id/linStartNew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_white_filled"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            style="@style/TextViewTitleStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start New" />

                        <TextView
                            style="@style/TextViewTitleStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Application"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:background="@color/black" />

                        <TextView
                            style="@style/TextViewSmall10Style"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="@string/start_new_msg" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivStartNewBtn"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_below="@id/linStartNew"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-18dp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/border_circular_red_filled"
                        android:padding="@dimen/_3sdp"
                        app:srcCompat="@drawable/ic_plus" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/_99sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp">

                    <LinearLayout
                        android:id="@+id/linEMICalculator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_white_filled"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            style="@style/TextViewTitleStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="EMI" />

                        <TextView
                            style="@style/TextViewTitleStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Calculator"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:background="@color/black" />

                        <TextView
                            style="@style/TextViewSmall10Style"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="@string/emi_cal_msg" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivEMICalculatorBtn"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_below="@id/linEMICalculator"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-18dp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/border_circular_red_filled"
                        android:padding="@dimen/_5sdp"
                        app:srcCompat="@drawable/ic_percent" />

                </RelativeLayout>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linContact"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7sdp"
        android:padding="@dimen/_6sdp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:elevation="@dimen/_2sdp"
        android:background="@drawable/border_circular_grey_filled"
