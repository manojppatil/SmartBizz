<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/relativeLayout_viewPager"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager_dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF" />

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/viewPageIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    app:fillColor="@color/colorSecondary"
                    app:pageColor="@color/colorPrimary" />
            </RelativeLayout>

            <View
                android:id="@+id/viewaward"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey" />

            /** CHECK ELIGIBLITY */
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/linearLayout_eligiblitycheck"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewdash_9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Want financial assistance?"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/textViewdash_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Check Eligibility now!"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorSecondary" />

                    <Button
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/button_dashboard_checkeligiblity"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorPrimary"
                        android:text="Continue"
                        android:textSize="17sp"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />
                </LinearLayout>

                <ImageView
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="2.5"
                    android:padding="10dp"
                    android:src="@drawable/eduson_eligibility_check" />

            </LinearLayout>

            /** PROFILE IS INCOMPLETE**/
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/linearLayout_profileincomplete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewdash_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your profile is incomplete"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/textViewdash_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Complete now!"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorSecondary"/>

                    <Button
                        android:id="@+id/button_dashboard_profileincomplete"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimary"
                        android:text="Continue"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />
                </LinearLayout>

                <ImageView
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="2.5"
                    android:padding="10dp"
                    android:src="@drawable/incomplete_application"  />

            </LinearLayout>


            /** LOAN APPLICATION IS INCOMPLETE**/
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/linearLayout_continue_application"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewdash_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your loan application is incomplete"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/textViewdash_13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Complete now!"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorSecondary"/>

                    <Button
                        android:id="@+id/button_dashboard_continueapplication"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimary"
                        android:text="Continue"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />
                </LinearLayout>

                <ImageView
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="2.5"
                    android:padding="10dp"
                    android:src="@drawable/incomplete_application" />

            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/linearLayout_applyloan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="2.5"
                    android:padding="10dp"
                    android:src="@drawable/icon_applynow" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_congratsmessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Get it now."
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorSecondary"/>

                    <Button
                        android:id="@+id/button_applynow_loan"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimary"
                        android:text="Apply Now"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1.2"
                android:id="@+id/linearLayout_dashdeal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="#EE415E"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewdash_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Deal Alert!"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:id="@+id/textView_dealTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:layout_marginBottom="?attr/actionBarSize">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearLayout_dashboard_howitworks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_howitworks_dashbord" />

                    <TextView
                        android:id="@+id/textViewdash_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="How it Works?"
                        android:textAllCaps="true"
                        android:textSize="12sp"/>
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />

                <LinearLayout
                    android:id="@+id/linearLayout_dashboard_aboutus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_aboutus_dashboard" />

                    <TextView
                        android:id="@+id/textViewdash_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="About Us"
                        android:textAllCaps="true"
                        android:textSize="12sp"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearLayout_dashboard_faq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_faq_dashboard" />

                    <TextView
                        android:id="@+id/textViewdash_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="FAQS"
                        android:textAllCaps="true"
                        android:textSize="12sp"/>
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />

                <LinearLayout
                    android:id="@+id/linearLayout_dashboard_contactus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_contactus_dashboard" />

                    <TextView
                        android:id="@+id/textViewdash_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Contact Us"
                        android:textAllCaps="true"
                        android:textSize="12sp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/linearLayout_dashboard_myprofile"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_myprofile_dashboard" />

            <TextView
                android:id="@+id/textViewdash_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textColor="@color/white"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_dashboard_callus"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_callus_dashboard" />

            <TextView
                android:id="@+id/textViewdash_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Us"
                android:textColor="@color/white"
                android:textSize="12sp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout_mailUs"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_mailus_dashboard" />

            <TextView
                android:id="@+id/textViewdash_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mail Us"
                android:textColor="@color/white"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/notification_linearLayout"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_notification_dashboard" />

            <TextView
                android:id="@+id/textViewdash_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

