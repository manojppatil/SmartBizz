<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager_dashboard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:elevation="@dimen/_4sdp"
                android:padding="@dimen/_5sdp" />

        </android.support.v7.widget.CardView>

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/viewPageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_25sdp"
            android:paddingStart="@dimen/_4sdp"
            android:paddingTop="8dp"
            android:paddingEnd="@dimen/_4sdp"
            android:paddingBottom="10dp"
            app:fillColor="@color/new_red"
            app:pageColor="@color/colorPrimary" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relStartNewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linBanner"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/msg1"
                style="@style/TextViewTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/complete_your_appliction_nw"
                android:textColor="@color/black_new" />

            <TextView
                android:id="@+id/msg2"
                style="@style/TextViewTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/msg1"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="@string/to_get_quick_nd_easy_loan"
                android:textColor="@color/black_new"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/msg2"
                android:layout_marginBottom="@dimen/_50sdp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/click"
                    android:textColor="@color/black_new"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/Proceed"
                    android:textColor="@color/new_red"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/to_complete"
                    android:textColor="@color/black_new"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linProceedBtn"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:background="@drawable/border_circular_red_filled"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <TextView
                style="@style/TextViewTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Proceed"
                android:textColor="@color/white" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:background="@color/white" />

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                app:srcCompat="@drawable/ic_angle_right" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linLeadsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linLayout1"
        android:layout_below="@id/linBanner"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:background="#77FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_2sdp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvLeads"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/linContact"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/_3sdp"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/_3sdp">

                <RelativeLayout
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linFriendlyScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_white_filled"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            style="@style/TextViewTitle14Style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Friendly"
                            android:textSize="13sp" />

                        <TextView
                            style="@style/TextViewTitle14Style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="top"
                            android:text="Score!"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:background="@color/darkblue" />

                        <TextView
                            style="@style/TextViewSmall9Style"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_38sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="@string/fs_msg" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_below="@id/linFriendlyScore"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-18dp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/border_circular_red_filled"
                        app:srcCompat="@drawable/ic_angle_right" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7sdp">

                    <LinearLayout
                        android:id="@+id/linStartNew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_white_filled"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            style="@style/TextViewTitle14Style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start New"
                            android:textSize="13sp" />

                        <TextView
                            style="@style/TextViewTitle14Style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="top"
                            android:text="Application!"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:background="@color/darkblue" />

                        <TextView
                            style="@style/TextViewSmall9Style"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_38sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="@string/start_new_msg" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivStartNewBtn"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_below="@id/linStartNew"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-18dp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/border_circular_red_filled"
                        android:backgroundTint="@color/colorPrimary"
                        android:padding="@dimen/_3sdp"
                        app:srcCompat="@drawable/ic_plus" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7sdp">

                    <LinearLayout
                        android:id="@+id/linEMICalculator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_white_filled"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            style="@style/TextViewTitle14Style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="EMI"
                            android:textSize="13sp" />

                        <TextView
                            style="@style/TextViewTitle14Style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="top"
                            android:text="Calculator!"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:background="@color/darkblue" />

                        <TextView
                            style="@style/TextViewSmall9Style"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_38sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="@string/emi_cal_msg" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivEMICalculatorBtn"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_below="@id/linEMICalculator"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-18dp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/border_circular_red_filled"
                        android:padding="@dimen/_5sdp"
                        app:srcCompat="@drawable/ic_percent" />

                </RelativeLayout>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linContact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/border_circular_grey_filled"
        android:backgroundTint="@color/colorPrimaryold"
        android:elevation="@dimen/_2sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:padding="@dimen/_2sdp"
                    app:srcCompat="@drawable/ic_home_call" />

                <TextView
                    android:id="@+id/txtCallUs"
                    style="@style/TextViewTitle14Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/call_us_s" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@color/darkblue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:padding="@dimen/_2sdp"
                    app:srcCompat="@drawable/ic_home_whatsapp" />

                <TextView
                    android:id="@+id/txtWhatsAppUs"
                    style="@style/TextViewTitle14Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:text="@string/whatsapp_us" />
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@color/darkblue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:padding="@dimen/_2sdp"
                    app:srcCompat="@drawable/ic_home_chat" />

                <TextView
                    android:id="@+id/txtEmailUs"
                    style="@style/TextViewTitle14Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:text="@string/emailus" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>

