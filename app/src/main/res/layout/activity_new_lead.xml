<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newUI.newViews.NewLeadActivity">

    <TextView
        android:id="@+id/txtStepTracker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textColor="@color/textcolordark"
        android:textSize="15sp"
        android:text="Step 1 of 4"/>


    <com.badoualy.stepperindicator.StepperIndicator
        android:id="@+id/stepperIndicator"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_below="@id/txtStepTracker"
        app:stpi_circleRadius="@dimen/_5sdp"
        app:stpi_circleStrokeWidth="@dimen/_2sdp"
        app:stpi_circleColor="@color/new_red"
        app:stpi_lineDoneColor="@color/blue1"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_400sdp"
            android:layout_below="@id/stepperIndicator"
            android:padding="@dimen/_8sdp"
            android:elevation="@dimen/_10sdp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    <ImageView
        android:id="@+id/ivNextBtn"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_30sdp"
        android:background="@drawable/border_circular_grey_filled"
        app:srcCompat="@drawable/ic_angle_right"
        android:elevation="@dimen/_4sdp"/>

    <ImageView
        android:id="@+id/ivPrevBtn"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/ivNextBtn"
        android:layout_marginBottom="@dimen/_30sdp"
        android:visibility="gone"
        android:background="@drawable/border_circular_blue_filled"
        app:srcCompat="@drawable/ic_angle_left"
        android:elevation="@dimen/_4sdp"/>


</RelativeLayout>