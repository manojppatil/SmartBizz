<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newUI.newViews.NewLeadActivity">

    <TextView
        android:id="@+id/txtStepTracker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textColor="@color/textcolordark"
        android:textSize="@dimen/_15sdp"
        android:text="Step 1 of 4"/>

    <include
        android:id="@+id/layout_tracker"
        layout="@layout/layout_horiz_tracker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_below="@id/txtStepTracker"
        android:layout_marginStart="@dimen/_15sdp"/>


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_400sdp"
            android:layout_below="@id/layout_tracker"
            android:padding="@dimen/_8sdp"
            android:elevation="@dimen/_10sdp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_30sdp"
        android:background="@drawable/border_circular_red_filled"
        app:srcCompat="@drawable/ic_angle_right"
        android:elevation="@dimen/_8sdp"/>


</RelativeLayout>