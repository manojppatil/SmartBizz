<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/lightblue">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="27sp"
        android:text="Your Profile Status"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <!--<ch.halcyon.squareprogressbar.SquareProgressBar-->
        <!--android:layout_gravity="center"-->
        <!--android:gravity="center"-->
        <!--android:id="@+id/sprogressbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:paddingTop="20dp">-->
    <!--</ch.halcyon.squareprogressbar.SquareProgressBar>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginBottom="20dp"
        android:background="@drawable/circlebackground"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/circularimageview_profilepic"
        android:elevation="10dp"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:padding="0.5dp"
        android:src="@drawable/superman"/>

    <com.github.lzyzsd.circleprogress.ArcProgress
        android:visibility="gone"
        android:elevation="10dp"
        android:layout_centerHorizontal="true"
        custom:arc_progress="54"
        android:id="@+id/arc_progress"
        android:layout_width="115dp"
        android:layout_height="115dp"
        custom:arc_bottom_text="Darsh"
        custom:arc_unfinished_color="@color/white"
        custom:arc_finished_color="@color/colorPrimaryDark"
        custom:arc_text_color="@color/white"
        custom:arc_bottom_text_size="16sp"
        custom:arc_text_size="30sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

    <LinearLayout
        android:gravity="center"
        android:id="@+id/linearlayout_eligibilitycheck"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Eligibility Check"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/imageView_pq"
            android:visibility="gone"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_tick_dash"/>
    </LinearLayout>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:id="@+id/viewformat"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/linearlayout_borrowerdetail"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Borrower Detail"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/imageView_borrowerDetail"
                android:visibility="gone"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_tick_dash"/>
        </LinearLayout>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/linearlayout_coborrowerdetail"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Co Borrower Detail "
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/imageView_coborrowerdetail"
                android:visibility="gone"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_tick_dash"/>
        </LinearLayout>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/linearlayout_documentupload"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Document Upload Borrower "
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/imageView_borrowerdocupload"
                android:visibility="gone"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_tick_dash"/>
        </LinearLayout>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/linearlayout_documentuploadCoborrower"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview7"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Document Upload CoBorrower "
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/imageView_coborrowerdocupload"
                android:visibility="gone"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_tick_dash"/>
        </LinearLayout>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>


        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/linearlayout_accountsetting"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview6"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Account Setting "
                android:textStyle="bold"/>
            <ImageView
                android:visibility="gone"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_tick_dash"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</ScrollView>
