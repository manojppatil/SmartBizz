                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Click here to Upload one of your income proofs"
                            android:textColor="#808080" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                            android:id="@+id/textview_incomeproof"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Income Proof"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/imageview_finance_incomeproof"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_below="@+id/textview_incomeproof"
                            android:layout_margin="5dp"
                            android:background="@drawable/dottedline_background"
                            android:scaleType="centerCrop"/>

                            <Button
                                android:id="@+id/button_finance_incomeproof"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_alignParentBottom="true"
                                android:layout_below="@+id/textview_incomeproof"
                                android:layout_margin="5dp"
                                android:background="@color/colorPrimaryDark"
                                android:text="Upload"
                                android:textColor="@color/white"
                                android:visibility="gone" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageView_uploadtick4"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:src="@drawable/greenrightclick"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Click here to Upload Last 6 months bank statement"
                            android:textColor="#808080" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                            android:id="@+id/textview_bankstatement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Bank Statement"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/imageview_finance_bankstatement"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_below="@+id/textview_bankstatement"
                            android:layout_margin="5dp"
                            android:background="@drawable/dottedline_background"
                            android:scaleType="centerCrop"/>

                            <Button
                                android:id="@+id/button_finance_bankstatement"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_alignParentBottom="true"
                                android:layout_below="@+id/textview_incomeproof"
                                android:layout_margin="5dp"
                                android:background="@color/colorPrimaryDark"
                                android:text="Upload"
                                android:textColor="@color/white"
                                android:visibility="gone" />
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/imageView_uploadtick5"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:src="@drawable/greenrightclick"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
