                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/icon_expand_collapse_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="3"
