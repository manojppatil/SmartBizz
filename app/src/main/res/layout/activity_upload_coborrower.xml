                android:id="@+id/linearlayout_educationdocument"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rectanglebackground_filled"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Educational Document"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/icon_expand_collapse_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="3"
                    android:src="@drawable/icon_expand" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayout_educationhide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textview_degreemarksheets"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Click here to Upload your last completed Degree"
                            android:textColor="#808080" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                            android:id="@+id/textview_degreeproof"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Degree Marksheets"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/imageview_education_degreemarksheet"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_below="@+id/textview_degreeproof"
                            android:layout_margin="5dp"
                            android:background="@drawable/dottedline_background"
                            android:scaleType="centerCrop"/>

                            <Button
                                android:id="@+id/button_education_degreemarksheet"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_alignParentBottom="true"
                                android:layout_below="@+id/textview_degreemarksheets"
                                android:layout_margin="5dp"
                                android:background="@color/colorPrimaryDark"
                                android:text="Upload"
                                android:textColor="@color/white"
                                android:visibility="gone" />

