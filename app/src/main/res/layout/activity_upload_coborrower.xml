                        <ImageView
                            android:id="@+id/imageView_uploadtick6"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:src="@drawable/greenrightclick"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Click here to Upload your Degree Certificate"
                            android:textColor="#808080" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                            android:id="@+id/textview_degreecertificate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Degree Certificate"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/imageview_education_degreecertificate"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_below="@+id/textview_degreecertificate"
                            android:layout_margin="5dp"
                            android:background="@drawable/dottedline_background"
                            android:scaleType="centerCrop"/>

                            <Button
                                android:id="@+id/button_education_degreecertificate"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_alignParentBottom="true"
                                android:layout_below="@+id/textview_degreemarksheets"
