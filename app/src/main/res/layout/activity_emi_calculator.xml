<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/_8sdp"
        android:layout_centerInParent="true"
        android:background="@drawable/border"
        android:elevation="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_8sdp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/ivUser"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    app:srcCompat="@drawable/ic_calculator" />

                <TextView
                    android:id="@+id/txtPersonalDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="EMI Calculator"
                    android:textColor="@color/textcolordark"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:id="@+id/linNames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivUser"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:theme="@style/EditTextStyle"
                        app:hintTextAppearance="@style/CustomTextAppearance">

                        <EditText
                            android:id="@+id/edtLoanAmt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Loan Amount (In Rupees)"
                            android:inputType="textNoSuggestions|number"
                            style="@style/EditTextStyle" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:theme="@style/EditTextStyle"
                        app:hintTextAppearance="@style/CustomTextAppearance">

                        <EditText
                            android:id="@+id/edtRateOfInterest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textNoSuggestions|number"
                            android:hint="Rate of Interest (Per Annum)"
                            style="@style/EditTextStyle" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:theme="@style/EditTextStyle"
                        app:hintTextAppearance="@style/CustomTextAppearance">

                        <EditText
                            android:id="@+id/edtTenure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textNoSuggestions|number"
                            android:hint="Tenure (In Months)"
                            style="@style/EditTextStyle" />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/txtCalculatedEmi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/darkblue"
                        android:background="@drawable/background_edittext"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:padding="@dimen/_5sdp"
                        android:hint="Your EMIs"
                        style="@style/TextViewTitle14Style" />


                    <LinearLayout
                        android:id="@+id/linCalculateBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/border_circular_red_filled"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:text="CalCulate EMI"
                            android:gravity="center"
                            android:textColor="@color/white"
                            style="@style/TextViewTitleStyle"/>

                        <!--<View-->
                            <!--android:layout_width="@dimen/_1sdp"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:layout_marginTop="@dimen/_2sdp"-->
                            <!--android:layout_marginBottom="@dimen/_2sdp"-->
                            <!--android:layout_marginStart="@dimen/_4sdp"-->
                            <!--android:layout_marginEnd="@dimen/_4sdp"-->
                            <!--android:background="@color/white" />-->

                        <!--<ImageView-->
                            <!--android:id="@+id/ivIndicator"-->
                            <!--android:layout_width="@dimen/_18sdp"-->
                            <!--android:layout_height="@dimen/_18sdp"-->
                            <!--app:srcCompat="@drawable/ic_key" />-->

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</RelativeLayout>