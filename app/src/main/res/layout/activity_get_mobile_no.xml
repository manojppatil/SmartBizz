<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:padding="@dimen/_30sdp">

        <TextView
            android:id="@+id/txtMsg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lets"
            android:textSize="15sp"
            android:textColor="@color/black_new"/>
        <TextView
            android:id="@+id/txtMsg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_with_ur"
            android:textSize="20sp"
            android:textColor="@color/black_new"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="@string/mobile_number"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black_new"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingTop="@dimen/_4sdp"
            android:background="@drawable/border">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:srcCompat="@drawable/ic_mobile_android"
                android:padding="@dimen/_3sdp"
                />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_6sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91"
                android:textSize="15sp"
                android:textColor="@color/black_new"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edtMobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="@dimen/_4sdp"
                android:text=""
                android:textSize="15sp"
                android:inputType="phone"
                android:maxLength="10"
                android:textColor="@color/black_new" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/_6sdp"
            android:visibility="gone"
            android:background="@drawable/border_circular">

            <EditText
                android:id="@+id/edtOtp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="@dimen/_3sdp"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/black_new"
                android:textSize="15sp"/>

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_6sdp"/>

            <ImageView
                android:id="@+id/ivRetry"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:srcCompat="@drawable/ic_redo"
                android:padding="@dimen/_3sdp" />

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linGetOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_circular_red_filled"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_30sdp">

        <TextView
            android:id="@+id/txtGetOtp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/get_otp"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"/>

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"/>

        <ImageView
            android:id="@+id/ivIndicator"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:srcCompat="@drawable/ic_key"/>

    </LinearLayout>
</RelativeLayout>


