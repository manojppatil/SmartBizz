<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout_borrower">



    </RelativeLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bulletIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingRight="5dp"
            android:textColor="@color/colorRed"
            android:text="@string/circle"/>
        <TextView
            android:layout_weight="1"
            android:maxLines="1"
            android:id="@+id/textMessages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Borrowerajbhsd kadsf kasbd kajsd kjajsdfk basdkfjj baslkdbf alksdjf aksdbf akjsbdf akjsdbf akskdbf aksdbf kasbdf lkasdbf kasdbf aksjdjb aksdbf kasdbf kabsdf kasbdfk abbsdf kjfabsdf "
            android:textColor="@color/colorRed"
            android:textSize="16sp"
            />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_weight="3.5"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/colorRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/timeOfMessage"/>
            <TextView
                android:padding="5dp"
                android:id="@+id/texView_borrower_arrowdown1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/down"
                android:textColor="@color/colorRed"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimary"/>
</LinearLayout>