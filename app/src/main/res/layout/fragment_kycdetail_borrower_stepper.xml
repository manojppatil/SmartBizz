<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/_5sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingRight="@dimen/_5sdp">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <moe.feng.common.stepperview.VerticalStepperItemView
                android:id="@+id/stepper_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:step_index="1"
                app:step_state="selected"
                app:step_summary="Summarized if needed"
                app:step_summary_done="Summarized if needed. Done"
                app:step_title="Personal Details">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:theme="@style/EditTextStyle"
                            app:hintTextAppearance="@style/CustomTextAppearance">

                            <EditText
                                android:id="@+id/edtFnameBr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/first_name"
                                android:inputType="textCapSentences"
                                android:theme="@style/EditTextStyle" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:theme="@style/EditTextStyle"
                            app:hintTextAppearance="@style/CustomTextAppearance">

                            <EditText
                                android:id="@+id/edtMnameBr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/middle_name"
                                android:inputType="textCapSentences"
                                android:theme="@style/EditTextStyle" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:theme="@style/EditTextStyle"
                            app:hintTextAppearance="@style/CustomTextAppearance">

                            <EditText
                                android:id="@+id/edtLnameBr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/last_name"
                                android:inputType="textCapSentences"
                                android:theme="@style/EditTextStyle" />
                        </android.support.design.widget.TextInputLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="72dp"
                                android:orientation="vertical"
                                android:padding="@dimen/_1sdp">

                                <TextView
                                    android:id="@+id/lblBirthdayBr"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/_6sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:text="@string/birthdate"
                                    android:textColor="#808080"
                                    android:textSize="16sp"
                                    android:visibility="invisible" />

                                <TextView
                                    android:id="@+id/txtBirthdateBr"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="1dp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:text="@string/birthdate"
                                    android:textColor="#808080"
                                    android:textSize="16sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/colorPrimary"
                                    android:paddingBottom="@dimen/_3sdp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtBirthdayCalenderBr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingTop="@dimen/_4sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_3sdp"
                                android:text="@string/calendar"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_4sdp">

                            <LinearLayout
                                android:id="@+id/linMale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:background="@drawable/border_circular_red_empty"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:padding="@dimen/_3sdp">

                                <ImageView
                                    android:id="@+id/ivMale"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_17sdp"
                                    android:tint="@color/textcolordark"
                                    app:srcCompat="@drawable/ic_male" />

                                <View
                                    android:layout_width="@dimen/_1sdp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    android:layout_marginEnd="@dimen/_4sdp"
                                    android:background="@color/textcolordark" />

                                <TextView
                                    android:id="@+id/txtMale"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Male"
                                    android:maxLines="1"
                                    android:theme="@style/TextViewRadioStyle" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linFemale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@drawable/border_circular_red_empty"
                                android:gravity="center_horizontal"
                                android:layout_centerHorizontal="true"
                                android:orientation="horizontal"
                                android:padding="@dimen/_3sdp">

                                <ImageView
                                    android:id="@+id/ivFemale"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_17sdp"
                                    android:tint="@color/textcolordark"
                                    app:srcCompat="@drawable/ic_female" />

                                <View
                                    android:layout_width="@dimen/_1sdp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    android:layout_marginEnd="@dimen/_4sdp"
                                    android:background="@color/textcolordark" />

                                <TextView
                                    android:id="@+id/txtFemale"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Female"
                                    android:maxLines="1"
                                    android:theme="@style/TextViewRadioStyle" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linOther"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@drawable/border_circular_red_empty"
                                android:gravity="center_horizontal"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal"
                                android:padding="@dimen/_3sdp">

                                <ImageView
                                    android:id="@+id/ivOther"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_17sdp"
                                    android:tint="@color/textcolordark"
                                    app:srcCompat="@drawable/ic_transgender" />

                                <View
                                    android:layout_width="@dimen/_1sdp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    android:layout_marginEnd="@dimen/_4sdp"
                                    android:background="@color/textcolordark" />

                                <TextView
                                    android:id="@+id/txtOther"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Other"
                                    android:maxLines="1"
                                    android:theme="@style/TextViewRadioStyle" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_4sdp">

                            <LinearLayout
                                android:id="@+id/linDob"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:background="@drawable/border_circular_red_empty"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:padding="@dimen/_3sdp">

                                <ImageView
                                    android:id="@+id/ivDob"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_17sdp"
                                    android:tint="@color/textcolordark"
                                    app:srcCompat="@drawable/ic_male" />

                                <View
                                    android:layout_width="@dimen/_1sdp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    android:layout_marginEnd="@dimen/_4sdp"
                                    android:background="@color/textcolordark" />

                                <TextView
                                    android:id="@+id/txtDob"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="01 Apr 1999"
                                    android:maxLines="1"
                                    android:theme="@style/TextViewRadioStyle" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linMarried"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@drawable/border_circular_red_empty"
                                android:gravity="center_horizontal"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal"
                                android:padding="@dimen/_3sdp">

                                <Switch
                                    android:id="@+id/switchMarried"
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="wrap_content"
                                    android:checked="false"
                                    android:text="@string/unmarried"
                                    android:textColor="@color/textcolordark"
                                    android:textOff="@string/unmarried"
                                    android:textOn="@string/married"
                                    android:textSize="16sp" /> />

                            </LinearLayout>


                        </RelativeLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:theme="@style/EditTextStyle"
                            app:hintTextAppearance="@style/CustomTextAppearance">

                            <EditText
                                android:id="@+id/edtEmailIdBr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="EmailId"
                                android:inputType="textEmailAddress"
                                android:theme="@style/EditTextStyle" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:theme="@style/EditTextStyle"
                            app:hintTextAppearance="@style/CustomTextAppearance">

                            <EditText
                                android:id="@+id/edtMobileNoBr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter Phone(10 digits)"
                                android:inputType="phone"
                                android:maxLength="10"
                                android:theme="@style/EditTextStyle" />
                        </android.support.design.widget.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1.5"
                                android:paddingLeft="@dimen/_4sdp"
                                android:text="Document Availability"
                                android:textColor="@color/colorPrimary"
                                android:theme="@style/TextViewTitleStyle" />

                            <Spinner
                                android:id="@+id/spDocumentBr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:dropDownSelector="@color/colorPrimary"
                                android:focusable="true"
                                android:gravity="center"
                                android:theme="@style/ThemeOverlay.AppCompat.Light" />
                        </LinearLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/edtPanLayoutBr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:theme="@style/EditTextStyle"
                            android:visibility="gone"
                            app:hintTextAppearance="@style/CustomTextAppearance">

                            <EditText
                                android:id="@+id/edtPanBr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/pan_number"
                                android:inputType="text|textCapCharacters"
                                android:maxLength="10"
                                android:textAllCaps="true"
                                android:theme="@style/EditTextStyle" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/edtAadhaarLayoutBr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:theme="@style/EditTextStyle"
                            android:visibility="gone"
                            app:hintTextAppearance="@style/CustomTextAppearance">

                            <EditText
                                android:id="@+id/edtAadhaarBr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/adhaar_number"
                                android:inputType="number"
                                android:maxLength="12"
                                android:theme="@style/EditTextStyle" />
                        </android.support.design.widget.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/linEmployed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/light_blue_50"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:theme="@style/EditTextStyle"
                                app:hintTextAppearance="@style/CustomTextAppearance">

                                <EditText
                                    android:id="@+id/edtCompanyBr"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/name_of_company"
                                    android:inputType="textCapSentences"
                                    android:theme="@style/EditTextStyle" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/EditTextStyle"
                                app:hintTextAppearance="@style/CustomTextAppearance">

                                <EditText
                                    android:id="@+id/edtAnnualSalBr"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/annual_income"
                                    android:inputType="numberDecimal"
                                    android:theme="@style/EditTextStyle" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_next_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/material_blue_500"
                            android:text="@android:string/ok"
                            android:textColor="@android:color/white" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:text="@android:string/cancel" />

                    </LinearLayout>

                </LinearLayout>

            </moe.feng.common.stepperview.VerticalStepperItemView>

            <moe.feng.common.stepperview.VerticalStepperItemView
                android:id="@+id/stepper_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                app:step_index="2"
                app:step_title="Identity Details">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_4sdp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:theme="@style/EditTextStyle"
                                app:hintTextAppearance="@style/CustomTextAppearance">

                                <EditText
                                    android:id="@+id/edtCurrentAddressBr"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Address"
                                    android:inputType="textPostalAddress"
                                    android:theme="@style/EditTextStyle" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:theme="@style/EditTextStyle"
                                app:hintTextAppearance="@style/CustomTextAppearance">

                                <EditText
                                    android:id="@+id/edtCurrentLandmarkBr"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Landmark"
                                    android:inputType="textPostalAddress"
                                    android:theme="@style/EditTextStyle" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:theme="@style/EditTextStyle"
                                app:hintTextAppearance="@style/CustomTextAppearance">

                                <EditText
                                    android:id="@+id/edtCurrentPincodeBr"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Pincode"
                                    android:inputType="number"
                                    android:maxLength="6"
                                    android:theme="@style/EditTextStyle" />
                            </android.support.design.widget.TextInputLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1.5"
                                android:paddingLeft="@dimen/_4sdp"
                                android:text="@string/current_country"
                                android:textColor="@color/colorPrimary"
                                android:theme="@style/TextViewTitleStyle" />

                            <Spinner
                                android:id="@+id/spCurrentCountryBr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:dropDownSelector="@color/colorPrimary"
                                android:focusable="true"
                                android:gravity="center"
                                android:theme="@style/ThemeOverlay.AppCompat.Light" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1.5"
                                android:paddingLeft="@dimen/_4sdp"
                                android:text="@string/current_state"
                                android:textColor="@color/colorPrimary"
                                android:theme="@style/TextViewTitleStyle" />

                            <Spinner
                                android:id="@+id/spCurrentStateBr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:dropDownSelector="@color/colorPrimary"
                                android:focusable="true"
                                android:gravity="center"
                                android:theme="@style/ThemeOverlay.AppCompat.Light" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1.5"
                                android:paddingLeft="@dimen/_4sdp"
                                android:text="@string/current_city1"
                                android:textColor="@color/colorPrimary"
                                android:theme="@style/TextViewTitleStyle" />

                            <Spinner
                                android:id="@+id/spCurrentCityBr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:dropDownSelector="@color/colorPrimary"
                                android:focusable="true"
                                android:gravity="center"
                                android:theme="@style/ThemeOverlay.AppCompat.Light" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_next_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/material_blue_500"
                            android:text="@android:string/ok"
                            android:textColor="@android:color/white" />

                        <Button
                            android:id="@+id/button_prev_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:text="@android:string/cancel" />

                        <Button
                            android:id="@+id/button_test_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:backgroundTint="@color/material_red_500"
                            android:text="Set Step 1 Error Text"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                </LinearLayout>

            </moe.feng.common.stepperview.VerticalStepperItemView>

            <moe.feng.common.stepperview.VerticalStepperItemView
                android:id="@+id/stepper_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                app:step_index="3"
                app:step_is_last="true"
                app:step_summary="Last step"
                app:step_summary_done="Last step. Done"
                app:step_title="Course Details">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:orientation="vertical">

                            <TextView
