<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:nestedScrollingEnabled="true">

    <ImageView
        android:id="@+id/photoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/imgGallery"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgWhatsApp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:padding="4dp"
            app:srcCompat="@drawable/whatsapp"/>

        <LinearLayout
            android:id="@+id/linLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgWhatsApp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLike"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_heart_filled"/>

            <TextView
                android:id="@+id/txtLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:text="15k"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/linLike"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgShare"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_share_square"/>

            <TextView
                android:id="@+id/txtShareCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linShare"
                android:layout_toRightOf="@+id/linShare"
                android:layout_gravity="center_horizontal"
                android:paddingTop="2dp"
                android:textSize="14sp"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:paddingBottom="5dp"
                android:text="14k"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgEdit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:layout_toRightOf="@+id/linShare"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_edit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:backgroundTint="@color/blue"
            android:background="@drawable/border"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:textSize="14sp"
            android:text=" Free ">

        </TextView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbAddEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:text="Email/Website">

        </CheckBox>

        <CheckBox
            android:id="@+id/cbAddMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:text="Add Mob No">

        </CheckBox>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorTheme"
            android:textSize="16sp"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:text="Good morning message!!! \n Have a good day">

        </TextView>

    </LinearLayout>

