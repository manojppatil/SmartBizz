<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eduvanz">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/eduvanz_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main2ActivityNavigation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ImageSlider"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".fqform.borrowerdetail.FqFormBorrower"
            android:screenOrientation="portrait" />
        <activity
            android:name=".fqform.coborrowerdetail.FqFormCoborrower"
            android:screenOrientation="portrait" />
        <activity
            android:name=".uploaddocs.UploadActivityBorrower"
            android:screenOrientation="portrait" />

        <activity
            android:name=".uploaddocs.UploadActivityCoBorrower"
            android:screenOrientation="portrait" />

        <activity
            android:name=".pqformfragments.SuccessAfterPQForm"
            android:screenOrientation="portrait" />

        <activity
            android:name=".friendlyscore.ClientActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".friendlyscore.StartActivityFS"
            android:screenOrientation="portrait" />

        <activity
            android:name=".faqexpandablelistview.FAQ"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WebViewAboutUs"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WebViewTermsNCondition"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MyProfile"
            android:screenOrientation="portrait" />
        <activity android:name=".Login" />
        <activity android:name=".SuccessSplash"></activity>




        <receiver android:name=".pqformfragments.SmsReceiver">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <service android:name=".FCM.NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".FCM.GettingDeviceTokenService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>


    </application>

</manifest>